{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4"><i class="fas fa-calendar-alt text-primary mr-2"></i>Evenement </h1>

        <!-- Sort Form -->
        <form action="{{ path('app_evenement_index') }}" method="get" class="mb-4">
            <div class="input-group">
                <select name="sort_by" class="form-control">
                    <option value="nom">Name</option>
                    <option value="datedebut">Date Debut</option>
                    <option value="datefin">Date Fin</option>
                    <option value="lieu">Lieu</option>
                    <option value="etat">Etat</option>
                </select>
                <select name="sort_order" class="form-control">
                    <option value="asc">Ascending</option>
                    <option value="desc">Descending</option>
                </select>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-secondary">
                        <i class="fas fa-sort"></i> Sort
                    </button>
                </div>
            </div>
        </form>

        <!-- Search Form -->
        <form action="{{ path('app_evenement_index') }}" method="get" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search...">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </form>

        <div class="row">
            {% for evenement in evenements %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-dark text-white">
                            <i class="fas fa-id-card-alt"></i> {{ evenement.nom }}
                        </div>
                        <div class="card-body">
                            <p><strong>Date Debut:</strong> {{ evenement.datedebut ? evenement.datedebut|date('Y-m-d') : '' }}</p>
                            <p><strong>Date Fin:</strong> {{ evenement.datefin ? evenement.datefin|date('Y-m-d') : '' }}</p>
                            <p><strong>Lieu:</strong> {{ evenement.lieu }}</p>
                            <p><strong>Etat:</strong> {{ evenement.etat }}</p>
                            <p><strong>Description:</strong> {{ evenement.description }}</p>
                            <p><strong>Affiche Event:</strong> {{ evenement.afficheEvent }}</p>
                            <p><strong>Categorie:</strong> {{ evenement.idCategorie.nomCategorie }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Show
                            </a>
                            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="{{ path('app_evenement_pdf', {'id': evenement.id}) }}" class="btn btn-secondary btn-sm" target="_blank">
                                <i class="fas fa-file-pdf"></i> PDF
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <p>No records found</p>
                </div>
            {% endfor %}
        </div>

        <a href="{{ path('app_evenement_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Create New
        </a>
    </div>
{% endblock %}
